<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="imageData"
            type="greendao.ImageData"/>
    </data>

    <FrameLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/adapter_main_card_height"
        android:layout_margin="@dimen/adapter_main_card_margin"
        android:elevation="@dimen/adapter_main_card_elevation"
        android:clipToPadding="false"
        android:outlineProvider="bounds"
        android:foreground="?android:attr/selectableItemBackground">

        <ImageView
            android:id="@+id/ivAdapterMainImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="center"/>

        <LinearLayout
            android:id="@+id/llAdapterMainDetails"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:background="@color/color_black_alpha_55">

            <ImageView
                android:id="@+id/ivAdapterMainType"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="2dp"
                android:scaleType="centerCrop"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:layout_margin="4dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_gravity="center_vertical"
                android:text="@{imageData.description}"/>

        </LinearLayout>

    </FrameLayout>

</layout>
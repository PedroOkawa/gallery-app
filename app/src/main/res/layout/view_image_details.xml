<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="imageData"
            type="greendao.ImageData"/>
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_image_card_height">

        <!-- IMAGE -->

        <ImageView
            android:id="@+id/ivViewImageCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>

        <!-- DETAILS (ID AND TYPE ICON) -->

        <LinearLayout
            android:id="@+id/llViewImageDetails"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:background="@color/color_image_details"
            android:weightSum="10">

            <!-- IMAGE ID -->

            <TextView
                android:id="@+id/tvViewImageId"
                style="@style/AppTextView"
                android:layout_gravity="start|center_vertical"
                android:layout_margin="@dimen/view_image_details_margin"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_weight="9"/>

            <!-- TYPE ICON (PHOTO / ILLUSTRATION / VECTOR) -->

            <ImageView
                android:id="@+id/ivViewImageType"
                android:layout_width="@dimen/view_image_icon_type_size"
                android:layout_height="@dimen/view_image_icon_type_size"
                android:layout_margin="@dimen/view_image_icon_type_margin"
                android:layout_gravity="end|center_vertical"
                android:scaleType="center"
                android:layout_weight="1"/>

        </LinearLayout>

    </FrameLayout>

</layout>